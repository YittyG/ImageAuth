
@using PicturePassword.Models
@using PicturePassword.data

@model MyAccountVM

<h3>Welcome @Model.user.Name</h3>
<br />
<a href="/home/index">Click to Upload Images</a>
<br />

<div class="row">
    <div class="col-md-4 col-md-offset-3">
        @foreach (UploadedPicture p in Model.pictures)
        {
            <div class="well" style="margin-top: 30px;">
                <div style="text-align: center">
                    <img src="~/Pictures/@p.Image" style="width:150px;" />
                    <br />
                    <h5>@p.TimesSeen</h5>
                    <br/>
                    <form method="post" action="/home/delete">
                        <input type="hidden" name="id" value="@p.id" />
                        <button class="btn-danger">Delete Image</button>
                    </form>
                </div>

                </div> 
         }
         
    </div>
</div>