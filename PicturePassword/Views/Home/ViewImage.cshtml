
@using PicturePassword.Models

@model SingleImageVM

@if (!Model.canVisit)

{
    <div class="row">
        <div class="col-md-6 col-md-offset-3 well" style="margin-top:50px;">
            @if(!string.IsNullOrEmpty(Model.message))
            {
            <h5>@Model.message</h5>
            }
            <h3>Please Enter Password for this image:</h3>
            <form method="post" action="/home/ViewImage">
                <input type="hidden" name="id" value="@Model.picture.id" class="form-control" />
                <br />
                <input type="text" name="password" class="form-control" />
                <br />
                <button class="btn btn-primary">View</button>
            </form>
        </div>
    </div>

}
else
{
    <div class="row" style="margin-top:50px;">
        <div class="col-md-4 col-md-offset-2 well">
            <img src="~/Pictures/@Model.picture.Image" style="width:350px;" />
            <br />
            <h4>Views: @Model.picture.TimesSeen</h4>
            </div>
        </div>
}
